{
    "name": "zeplin-extension-dotnetmaui",
    "version": "1.0.2",
    "description": "Clean UI code generation for .NET MAUI",
    "author": {
        "name": "Daniel Monettelli",
        "url": "https://twitter.com/DaniMonettelli"
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/danielmonettelli/zeplin-extension-dotnetmaui"
    },
    "scripts": {
        "start": "zem start",
        "build": "zem build",
        "clean": "zem clean",
        "exec": "zem exec",
        "publish": "npm publish"
    },
    "devDependencies": {
        "mustache-loader": "^1.4.3",
        "zem": "^1.3.1"
    },
    "dependencies": {
        "indent-string": "^5.0.0",
        "lodash": "^4.17.21",
        "mustache": "^4.2.0"
    },
    "zeplin": {
        "displayName": ".NET MAUI",
        "projectTypes": [
            "web",
            "android",
            "ios"
        ],
        "options": [
            {
                "name": "Sort styleguide resources",
                "type": "switch",
                "id": "sortResources",
                "default": true
            },
            {
                "name": "Consolidate duplicates (specify suffix)",
                "type": "text",
                "id": "duplicateSuffix",
                "default": ""
            },
            {
                "name": "Define HorizontalTextAlignment on",
                "type": "picker",
                "id": "textAlignmentMode",
                "default": "label",
                "options": [
                    {
                        "name": "Style",
                        "value": "style"
                    },
                    {
                        "name": "Label",
                        "value": "label"
                    }
                ]
            },
            {
                "name": "Ignore FontFamily",
                "type": "switch",
                "id": "ignoreFontFamily",
                "default": false
            }
        ]
    }
}
